<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Community Property Management System</display-name>

    <!-- 欢迎页面 -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!-- 会话超时时间（30分钟） -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- 错误页面配置 -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/error/403.jsp</location>
    </error-page>

    <!-- 字符编码过滤器 -->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.property.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- 登录过滤器 -->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.property.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/owner/*</url-pattern>
        <url-pattern>/finance/*</url-pattern>
    </filter-mapping>

    <!-- Servlet配置 -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.property.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.property.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/admin/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OwnerServlet</servlet-name>
        <servlet-class>com.property.servlet.OwnerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OwnerServlet</servlet-name>
        <url-pattern>/admin/owner</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HouseServlet</servlet-name>
        <servlet-class>com.property.servlet.HouseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HouseServlet</servlet-name>
        <url-pattern>/admin/house</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChargeItemServlet</servlet-name>
        <servlet-class>com.property.servlet.ChargeItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChargeItemServlet</servlet-name>
        <url-pattern>/admin/chargeItem</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PaymentServlet</servlet-name>
        <servlet-class>com.property.servlet.PaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentServlet</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RepairServlet</servlet-name>
        <servlet-class>com.property.servlet.RepairServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RepairServlet</servlet-name>
        <url-pattern>/repair</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StatisticsServlet</servlet-name>
        <servlet-class>com.property.servlet.StatisticsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatisticsServlet</servlet-name>
        <url-pattern>/statistics</url-pattern>
    </servlet-mapping>

</web-app>
